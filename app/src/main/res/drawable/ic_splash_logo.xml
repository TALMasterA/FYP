    <!-- Decorative Sparkles (Gold) -->
    <group
        android:translateX="220"
        android:translateY="70"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:rotation="45">
        <path
            android:fillColor="#FFD700"
            android:pathData="M0,0h100v100h-100z" />
    </group>


</vector>

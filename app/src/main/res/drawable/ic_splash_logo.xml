    android:width="288dp"
    android:height="288dp"
    android:viewportWidth="288"
    android:viewportHeight="288">

    <!-- Navy circle background -->
    <path
        android:fillColor="#1565C0"
        android:pathData="M144,0 A144,144 0 1,1 143.9999,0 Z" />

    <!-- White speech bubble (top-left) -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M 74,68 H 166 A 24,24,0,0,1,190,92 V 146 A 24,24,0,0,1,166,170 H 74 A 24,24,0,0,1,50,146 V 92 A 24,24,0,0,1,74,68 Z" />


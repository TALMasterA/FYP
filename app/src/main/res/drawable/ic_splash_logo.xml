        android:fillColor="#29B6F6"
        android:pathData="M 212,128 H 224 A 4,4,0,0,1,228,132 V 148 A 4,4,0,0,1,224,152 H 212 A 4,4,0,0,1,208,148 V 132 A 4,4,0,0,1,212,128 Z" />

    <!-- Letter A (Blue, inside white bubble) -->
    <!-- Viewport 288. Target ~90,82 (120-30=90, 112-30=82). Scale 0.6 (60x60). -->
    <group
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:translateX="90"
        android:translateY="82">
        <path
            android:fillColor="#1565C0"
            android:pathData="M 18,90 L 42,20 L 58,20 L 82,90 L 68,90 L 62,70 L 38,70 L 32,90 Z M 42,57 L 58,57 L 50,32 Z" />
    </group>

    <!-- Character 文 (White, inside blue bubble) -->
    <!-- Target ~150,138 (180-30=150, 168-30=138). Scale 0.6. -->
    <group
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:translateX="150"
        android:translateY="138">
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M 45,5 L 55,5 L 54,23 L 88,23 L 88,34 L 53,34 C 49,60 38,80 12,94 L 6,84 C 27,73 38,58 41,34 L 12,34 L 12,23 L 44,23 Z M 46,38 C 58,54 70,72 88,88 L 79,95 C 62,78 50,60 42,42 Z" />
